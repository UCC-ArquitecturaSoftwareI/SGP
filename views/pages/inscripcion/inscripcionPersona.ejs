
<h1>Curso: <%= curso.nombreDelCurso %></h1>

<div class="input-group mb-3">
  <input type="text" data-provide="typeahead" placeholder="Persona" name="buscador" onkeyup="encontrarPersona()">
  <!--<div class="input-group-append">-->
  <!--<button class="btn btn-primary btn-block" type="button">Buscar</button>-->
  <!--</div>-->
</div>


<h2>Resultados de Busqueda: </h2>

<table id="personasBusqueda" class="table table-striped table-hover" style="width: 50%; margin:auto;">
  <thead>
  <tr>
    <th>Nombre</th>
    <th>Apellido</th>
    <th>DNI</th>
    <th>Email</th>
    <th>Direccion</th>
    <th></th>
  </tr>
  </thead>
  <tbody id="tablaBusqueda"/>
</table>

<br><br><br><br><br><br>

<h2>Inscriptos: </h2>
<table id="personasInscriptas" class="table table-striped table-hover" style="width: 50%; margin:auto;">
  <thead>
  <tr>
    <th>id</th>
    <th>Nombre</th>
    <th>Apellido</th>
    <th>DNI</th>
    <th></th>
  </tr>
  </thead>
  <tbody id="tablaInscriptos">
  <%
  for(var i = 0; i < inscripciones.length ; i++){ %>
  <tr>
    <td><%= inscripciones[i].persona.id %></td>
    <td><%= inscripciones[i].persona.nombre %></td>
    <td><%= inscripciones[i].persona.apellido %></td>
    <td><%= inscripciones[i].persona.dni%></td>
    <td>
      <a href="/Alumno/<%= inscripciones[i].persona.id %>" class="btn-info btn">
        <i class="fas fa-eye"></i>
      </a>
    </td>
    <td>
      <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#removeStudentModal"
              data-alumno-nombre="<%=inscripciones[i].persona.dni + ', ' + inscripciones[i].persona.apellido + ', ' + inscripciones[i].persona.nombre%>"
              data-inscripcion-id="<%=inscripciones[i].id%>">
        <i class="fas fa-minus-circle"></i>
      </button>
      <!--<a href="/inscripciones/baja/<%=inscripciones[i].id%>" class="btn-info btn">-->
        <!--<i class="fas fa-minus-circle"></i>-->
      <!--</a>-->
    </td>
  </tr>
  <% } %>
  </tbody>
</table>



<!-- Modal -->
<div class="modal fade" id="removeStudentModal" tabindex="-1" role="dialog" aria-labelledby="removeStudentModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="titulo">Atencion: Dar de baja</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <h5 class="alumno" id="alumno">Alumnno: </h5>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
        <button type="button" class="btn btn-primary">Remover</button>
      </div>
    </div>
  </div>
</div>


