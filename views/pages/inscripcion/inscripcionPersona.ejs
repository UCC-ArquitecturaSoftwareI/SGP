
<h1>Curso: <%= curso.nombreDelCurso %></h1>

<div class="input-group mb-3">
  <input type="text" data-provide="typeahead" placeholder="Persona" name="buscador" onkeyup="encontrarPersona(<%= curso.id %>)">
</div>


<h2>Resultados de Busqueda: </h2>

<table id="personasBusqueda" class="table table-striped table-hover" style="width: 50%; margin:auto;">
  <thead>
  <tr>
    <th>Nombre</th>
    <th>Apellido</th>
    <th>DNI</th>
    <th>Email</th>
    <th>Direccion</th>
    <th></th>
  </tr>
  </thead>
  <tbody id="tablaBusqueda"/>
</table>

<br><br><br><br><br><br>

<h2>Inscriptos: </h2>
<table id="personasInscriptas" class="table table-striped table-hover" style="width: 50%; margin:auto;">
  <thead>
  <tr>
    <th>Orden</th>
    <th>Nombre</th>
    <th>Apellido</th>
    <th>DNI</th>
    <th></th>
  </tr>
  </thead>
  <tbody id="tablaInscriptos">
  <%
  for(var i = 0; i < inscriptos.length ; i++){ %>
  <tr>
    <td><%= i %></td>
    <td><%= inscriptos[i].persona.nombre %></td>
    <td><%= inscriptos[i].persona.apellido %></td>
    <td><%= inscriptos[i].persona.dni%></td>
    <td>
      <a href="/Alumno/<%= inscriptos[i].persona.id %>" class="btn-info btn">
        <i class="fas fa-eye"></i>
      </a>
    </td>
    <td>
      <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#removeStudentModal"
              data-alumno-nombre="<%=inscriptos[i].persona.dni + ', ' + inscriptos[i].persona.apellido + ', ' + inscriptos[i].persona.nombre%>"
              data-alumno-id="<%=inscriptos[i].persona.id%>"
              data-curso-id="<%=inscriptos[i].curso.id%>"
              data-inscripcion-id="<%=inscriptos[i].id%>">
        <i class="fas fa-minus-circle"></i>
      </button>
    </td>
  </tr>
  <% } %>
  </tbody>
</table>

<h2>Lista de Espera: </h2>
<table id="personasEnEspera" class="table table-striped table-hover" style="width: 50%; margin:auto;">
 <% if(enespera){ %>
  <thead>
  <tr>
    <th>Orden</th>
    <th>Nombre</th>
    <th>Apellido</th>
    <th>DNI</th>
    <th></th>
  </tr>
  </thead>
  <tbody id="tablaEspera">

  <%
  for(var i = 0; i < enespera.length ; i++){ %>
  <tr>
    <td><%= i %></td>
    <td><%= enespera[i].persona.nombre %></td>
    <td><%= enespera[i].persona.apellido %></td>
    <td><%= enespera[i].persona.dni%></td>
    <td>
      <a href="/Alumno/<%= enespera[i].persona.id %>" class="btn-info btn">
        <i class="fas fa-eye"></i>
      </a>
    </td>
    <td>
      <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#removeStudentModal"
              data-alumno-nombre="<%=enespera[i].persona.dni + ', ' + enespera[i].persona.apellido + ', ' + enespera[i].persona.nombre%>"
              data-alumno-id="<%=enespera[i].persona.id%>"
              data-curso-id="<%=enespera[i].curso.id%>"
              data-inscripcion-id="<%=enespera[i].id%>">
        <i class="fas fa-minus-circle"></i>
      </button>
    </td>
  </tr>
  <% } %>
  </tbody>
  <% } %>
</table>



<!-- Modal -->
<div class="modal fade" id="removeStudentModal" tabindex="-1" role="dialog" aria-labelledby="removeStudentModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="titulo">Atencion: Dar de baja</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <h5 class="alumno" id="alumno">Alumnno: </h5>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
        <button id="botonRemover" type="button" class="btn btn-primary">Remover</button>
      </div>
    </div>
  </div>
</div>


