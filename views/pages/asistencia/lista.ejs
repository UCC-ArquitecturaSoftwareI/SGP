<h1>Listado de alumnos</h1>
<h3>Toma de asistencia</h3>

<table id="alumno" class="table table-striped table-hover" style="width: 65%; margin:auto;">
  <thead>
  <tr>
    <th>Nombre</th>
    <th>Apellido</th>
    <th>Editar</th>
  </tr>
  </thead>
  <tbody id="table">
  <% for(var i=0; i<pers.length; i++){ %>
  <tr>
    <td><%= pers[i].nombre %></td>
    <td><%= pers[i].apellido %></td>
    <td>
      <a href="#" class = "btn btn-outline-dark">
        <i class="fas fa-pencil-alt"></i>
      </a>
    </td>
  </tr>
  <% } %>
  </tbody>
</table>
