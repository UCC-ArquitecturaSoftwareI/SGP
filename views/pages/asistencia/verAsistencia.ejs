<h1>Listado de asistencias</h1>

<table id="alumno" class="table table-striped table-hover" style="width: 50%; margin:auto;">
  <thead>
  <tr>
    <th>Nombre</th>
    <th>Apellido</th>
    <th>Asistencias</th>
    <th>Editar</th>
  </tr>
  </thead>
  <tbody id="table">
  <% for(var i = 0; i < asist.length ; i++){ %>
  <tr>
    <td><%= asist[i].nombre %></td>
    <td><%= asist[i].apellido %></td>
    <td><%= asist[i].porcentaje %></td>
    <td><a href="/asistencia/indexAsistencia/<%= asist[i].id%>/<%=asist[i].idCurso%>" class="btn-outline-info btn">
        <i class="fas fa-pencil-alt"></i>
      </a></td>
  </tr>
  <% } %>
  </tbody>
</table>

