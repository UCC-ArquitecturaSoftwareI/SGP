<% if (curso.nombreDelCurso == null){ %>
<form action="/cursos/agregar" method="post">
  <% }else{ %>
  <form action="/cursos/modificar" method="post">
    <% } %>
    <div class="form-group">
      <label for="nombre">Nombre Curso</label>
      <input type="text" class="form-control" name="nombre" value="<%= curso.nombre %>">
    </div>
    <div class="form-group">
      <label for="fechaInicio">Fecha de Inicio Curso</label>
      <input type="number" class="form-control" name="fechaInicio" value="<%= curso.fechaInicio %>">
    </div>
    <div class="form-group">
      <label for="fechaFin">Fecha Fin Curso</label>
      <input type="number" class="form-control" name="fechaFin" value="<%= curso.fechaFin %>">
    </div>
    <div class="form-group">
      <label for="dias">Dias De Cursos</label>
      <input type="text" class="form-control" name="dias" value="<%= curso.dias %>">
    </div>
    <div class="form-group">
      <label for="horaInicio">Hora Inicio Curso</label>
      <input type="number" class="form-control" name="horaInicio" value="<%= curso.horaInicio %>">
    </div>
    <div class="form-group">
      <label for="horaFin">Hora Fin Cursos</label>
      <input type="number" class="form-control" name="horaFin" value="<%= curso.horaFin %>">
    </div>
    <div class="form-group">
      <label for="descripcion">Descripcion del Curso</label>
      <input type="text" class="form-control" name="descripcion" value="<%= curso.descripcion %>">
    </div>
    <div class="form-group">
      <label for="aula">Aula</label>
      <input type="number" class="form-control" name="aula" value="<%= curso.aula %>">
    </div>
    <div class="form-group">
      <label for="CupoCursos">Cupos del Cursos</label>
      <input type="number" class="form-control" name="Cupo" value="<%= curso.Cupo %>">
    </div>

    <% if (curso.nombreDelCurso == null){ %>
    <input type="submit" class="btn btn-primary" value="AgregarCurso">
    <% }else{ %>
    <input type="submit" class="btn btn-primary" value="ModificarCurso">
    <% } %>
  </form>
