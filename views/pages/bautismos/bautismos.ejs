<form style="width: 65%; margin:auto;">
  <div class="form-row">
    <div class="form-group col-md-9">
      <label for="nombre">Buscar</label>
      <input type="text" name="nombre" onkeyup="buscarBautismo()" placeholder="Busqueda de turno por nombre o DNI" size="50">
    </div>
    <div class="col">
      <a href="/bautismos/add" class="btn btn-primary">Nuevo Turno</a>
    </div>
  </div>
</form>

<table id="tablabautismos" class="table table-striped table-hover" style="width: 65%; margin:auto;">
  <thead>
  <tr>
    <th>Nombre</th>
    <th>DNI</th>
    <th>Fecha</th>
    <th>Turno</th>
    <th></th>
    <th></th>
  </tr>
  </thead>
  <tbody id="tabla">
  <% for(var i = 0; i < a.length ; i++){
    var fecha = new Date(a[i].fecha * 1); %>
  <tr>
    <td><%= a[i].nombre %></td>
    <td><%= a[i].dni %></td>
    <td><%= ("00" + fecha.getDate()).substr(-2) %>/<%= ("00" + (fecha.getMonth() + 1)).substr(-2) %>/<%= fecha.getFullYear() %></td>
    <td><%= a[i].turno %></td>
    <td>
      <a href="/bautismos/<%= a[i].id %>" class="btn btn-primary">
        <i class="fas fa-eye"></i>
      </a>
    </td>
    <td>
      <a href="/bautismos/eliminar/<%= a[i].id %>" class="btn btn-primary">
        <i class="fas fa-trash"></i>
      </a>
    </td>
  </tr>
  <% } %>
  </tbody>
</table>
