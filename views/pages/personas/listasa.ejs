

<div class="container">
  <div class="row">
    <div class="col-sm">
      <h1>Lista de personas</h1>
    </div>
    <div class="col-sm">
      <a href="/persona/formulario/0" class="btn-info btn"><i class="fas fa-plus"></i></a>
    </div>
    <div class="col-sm">
      <form class="form-inline my-2 my-lg-0" >
        <input class="form-control mr-sm-2" type="search" placeholder="Buscar" aria-label="Search" name="buscador" onkeyup="buscarPersona()">
      </form>
    </div>
  </div>
</div>

<table id="personas" class="table table-striped table-hover" style="width: 50%; margin:auto;">
  <thead>
  <tr>
    <th>Nombre</th>
    <th>Apellido</th>
    <th>DNI</th>
    <th>Correo</th>
    <th>Dirección</th>
    <th></th>
    <th></th>
  </tr>
  </thead>
  <tbody id="tabla">
  <% for(var i = 0; i < persona.length ; i++){ %>
  <tr>
    <td><%= persona[i].nombre %></td>
    <td><%= persona[i].apellido %></td>
    <td><%= persona[i].dni %></td>
    <td><%= persona[i].correo %></td>
    <td><%= persona[i].direccion %></td>
    <td>
      <button class="btn-info btn" data-toggle="modal" data-target="#deleteModal<%= persona[i].id %>">
        <i class="fas fa-trash"></i>
      </button>
      <div class="modal fade" id="deleteModal<%= persona[i].id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel2<%= persona[i].id %>">¿Seguro que desea eliminar?</h5>
              <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">×</span>
              </button>
            </div>
            <div class="modal-body"></div>
            <div class="modal-footer">
              <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancelar</button>
              <a class="btn btn-primary" href="/persona/eliminar/<%= persona[i].id %>">Eliminar</a>
            </div>
          </div>
        </div>
      </div>
    </td>
    <td>
      <a href="/persona/formulario/<%= persona[i].id%>" class="btn-info btn">
        <i class="fas fa-eye"></i>
      </a>
    </td>
  </tr>
  <% } %>
  </tbody>
</table>


